<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!-- load robot URDF description -->
  <param name="robot_description" command="xacro --inorder $(find challenge_project)/urdf/turtlebot3_burger.urdf.xacro"/>

  <!-- robot initial position -->
  <arg name="x" default="1"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0"/>
  <arg name="roll" default="0"/>
  <arg name="pitch" default="0"/>
  <arg name="yaw" default="3.1416"/> <!--1.5708  3.1416-->

  <!-- simulation parameters -->
  <arg name="world" default="empty"/> 
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
	<arg name="gui" default="true"/>
	<arg name="debug" default="false"/>
  
  <!-- launch gazebo server and client from empty_world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable -->
    <arg name="world_name" value="$(find challenge_project)/worlds/challenge2.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- spawn model in world -->
  <node name="mybot_gazebo" pkg="gazebo_ros" 
        type="spawn_model" output="screen"
        args="-urdf -param robot_description -model mybot 
          		-x $(arg x) -y $(arg y) -z $(arg z)
      				-R $(arg roll) -P $(arg pitch) -Y $(arg yaw)" 
  />

  <!-- Challenge2, task2 -->
  <node name="obstacle_control" pkg="challenge_project" type="challenge2_task2_world_control.py"/>
  <param name="distance_of_security" type="double" value="20" />

  <!--   
  <node name="Avoidance" pkg="challenge_project" type="challenge2_task2.py" output="screen" required="true" /> 
  -->

</launch>
